kotlin_library(
  name = 'kotlin',
  srcs = [
    'AKotlinClass.kt',
    'AJavaClass.java',
    ':ap',
  ],
  visibility = [
    'PUBLIC',
  ]
)

kotlin_annotation_processor(
    name = "ap",
    srcs = [
      'AKotlinClass.kt',
      'AJavaClass.java',
    ],
    deps = [
        ":ap-lib",
    ],
)

java_library(
    name = "ap-lib",
    srcs = [
        "AnnotationProcessor.java",
    ],
    resources = glob([
        'resources/**',
    ]),
    resources_root = "resources"
)
