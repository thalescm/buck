load("//tools/build_rules:java_rules.bzl", "java_immutables_library")

TYPES_SRCS = (
    glob(["*Macro.java"]) + [
        "AbstractMacroContainer.java",
        "AbstractStringWithMacros.java",
    ]
)

java_immutables_library(
    name = "types",
    srcs = TYPES_SRCS,
    visibility = ["PUBLIC"],
    deps = [
        "//src/com/facebook/buck/model:model",
