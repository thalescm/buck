load("//tools/build_rules:java_rules.bzl", "java_immutables_library")

CONSTANT_SRCS = [
    "BuckConstant.java",
]

java_library(
    name = "constants",
    srcs = CONSTANT_SRCS,
    visibility = ["PUBLIC"],
    deps = [],
)

# TODO(cjhopman): Move HumanReadableException to exceptions/
